<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
>
    <ui:style>
        .main-panel {
        padding: 10px;
        }
        .buttons-bar {
        margin-top: 10px;
        border-top: 1px solid lightgray;
        display: block;
        }
        .buttons-bar-button {
        margin: 3px 3px 0px 0; <!-- top rigth bottom left -->
        display: block;
        }
    </ui:style>
    <g:HTMLPanel ui:field="mainPanel" addStyleNames="{style.main-panel}">
        <g:FlexTable ui:field="editor"></g:FlexTable>
        <b:Alert ui:field="alertEditor" type="ERROR" close="false" animation="true"/> <!-- heading="Corregir"   -->
        <g:HorizontalPanel ui:field="toolBar" addStyleNames="{style.buttons-bar}">
            <b:Button ui:field="btnGuardar" addStyleNames="{style.buttons-bar-button}">Guardar</b:Button>
            <b:Button ui:field="btnCancelar" addStyleNames="{style.buttons-bar-button}">Cancelar</b:Button>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>